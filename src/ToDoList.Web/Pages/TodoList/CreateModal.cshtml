@page
@model ToDoList.Web.Pages.TodoList.CreateModalModel
@{
    ViewData["Title"] = "CreateModal";
}
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@{
    Layout = null;
}

<abp-dynamic-form abp-model="@Model.todoListItem" asp-page="/TodoList/CreateModal">
    <abp-modal>
        <abp-modal-header title="Add New Item To List"></abp-modal-header>
        <abp-modal-body>
            <abp-form-content />
        </abp-modal-body>
        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</abp-dynamic-form>

